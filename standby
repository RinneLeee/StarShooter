document.addEventListener("DOMContentLoaded", function() {
  const today = new Date();
  const calendarContainer = document.getElementById('calendar');
  let nearestDateIndex = -1;
  
  // Find the nearest date
  schedule.forEach((item, index) => {
    const [day, date] = item.day.split(', ');
    const formattedDate = new Date(date + ", 2024");
    if (formattedDate >= today && (nearestDateIndex === -1 || formattedDate < new Date(schedule[nearestDateIndex].day.split(', ')[1] + ", 2024"))) {
      nearestDateIndex = index;
    }
  });
  
  // Generate calendar
  schedule.forEach((item, index) => {
    const [day, date] = item.day.split(', ');
    const formattedDate = new Date(date + ", 2024");
    const dateString = formattedDate.toISOString().split('T')[0];
    const usersString = item.users.join(', ');
    
    // Add only if the date is after or equal to today's date
    if (formattedDate >= today) {
      const dayDiv = document.createElement('div');
      dayDiv.classList.add('day');
      dayDiv.dataset.date = dateString;
      dayDiv.innerHTML = `
        <div class="date">${date}</div>
        <div class="day-name">${day}</div>
        <div class="users">${usersString}</div>
      `;
      
      // Apply special styling for the nearest date
      if (index === nearestDateIndex) {
        dayDiv.classList.add('nearest-date');
      }
      
      calendarContainer.appendChild(dayDiv);
    }
  });
  
  // Modal functionality
  const modal = document.getElementById('modal');
  const modalContent = document.getElementById('modal-content');
  const closeModal = document.querySelector('.close');
  
  calendarContainer.addEventListener('click', function(event) {
    if (event.target.classList.contains('day')) {
      const date = event.target.dataset.date;
      const scheduleItem = schedule.find(item => item.day.includes(date));
      modalContent.innerHTML = generateScheduleDetails(scheduleItem);
      modal.style.display = 'block';
    }
  });
  
  closeModal.addEventListener('click', function() {
    modal.style.display = 'none';
  });
  
  window.addEventListener('click', function(event) {
    if (event.target == modal) {
      modal.style.display = 'none';
    }
  });
});

// Function to generate schedule details
function generateScheduleDetails(scheduleItem) {
  const timeSlots = [
    { start: "12 AM", end: "6 AM" },
    { start: "6 AM", end: "1 PM" },
    { start: "1 PM", end: "7 PM" },
  ];
  
  let scheduleDetailsHTML = `<p>${scheduleItem.day}</p>`;
  scheduleItem.users.forEach((user, index) => {
    scheduleDetailsHTML += `<p>${timeSlots[index].start} -> ${user} -> ${timeSlots[index].end}</p>`;
  });
  
  return scheduleDetailsHTML;
}
